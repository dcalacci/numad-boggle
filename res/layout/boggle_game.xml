<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background"
    android:orientation="vertical"
    android:soundEffectsEnabled="true" >

    <TableLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:gravity="center_horizontal|fill_horizontal|center"
        android:orientation="horizontal"
        android:stretchColumns="*" >

        <TableRow
            android:layout_width="fill_parent"
            android:layout_height="wrap_content" >

            <TextView
                android:id="@+id/boggle_score"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="8dp"
                android:layout_marginTop="10dp"
                android:layout_weight="0.4"
                android:text="@string/score_label"
                android:textColor="@color/boggle_hilite"
                android:textSize="20dp" />

            <TextView
                android:id="@+id/boggle_time"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginRight="2dp"
                android:layout_marginTop="10dp"
                android:layout_weight="0.4"
                android:gravity="fill_horizontal"
                android:text="@string/time_label"
                android:textColor="@color/boggle_foreground"
                android:textSize="20dp" />

            <Button
                android:id="@+id/button_boggle_pause"
                android:layout_width="0dp"
                android:layout_height="35dp"
                android:layout_marginTop="10dp"
                android:layout_weight="0.2"
                android:text="@string/pause_label" />
        </TableRow>

        <TableRow
            android:id="@+id/tableRow1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:gravity="center_horizontal|fill_horizontal|center" >

            <Button
                android:id="@+id/button_DiceR1C1"
                android:layout_width="0dp"
                android:layout_height="60dp"
                android:layout_weight=".25"
                android:background="@drawable/button_custom"
                android:gravity="center_vertical|center_horizontal"
                android:textSize="20dp" />

            <Button
                android:id="@+id/button_DiceR1C2"
                android:layout_width="0dp"
                android:layout_height="60dp"
                android:layout_weight=".25"
                android:background="@drawable/button_custom"
