<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="edu.madcourse.dancalacci"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="8"
        android:targetSdkVersion="15" />

    <application
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/CustomTheme" >
        <activity
            android:name="edu.madcourse.dancalacci.MainActivity"
            android:label="@string/title_activity_main" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        
        <activity 
            android:name=".TeamMembers"
            android:theme="@android:style/Theme.Dialog"
            android:label="@string/team_members_label">
        </activity>
        
        <activity
            android:name="edu.madcourse.dancalacci.sudoku.Sudoku"
            android:label="@string/sudoku_label">
        </activity>

        <activity android:name="edu.madcourse.dancalacci.sudoku.About"
              android:label="@string/about_title"
              android:theme="@android:style/Theme.Dialog">
        </activity>
        <activity android:name="edu.madcourse.dancalacci.sudoku.Prefs"
              android:label="@string/settings_title">
        </activity>
        <activity android:name="edu.madcourse.dancalacci.sudoku.Game"
              android:label="@string/game_title"/>
    </application>
    
</manifest>